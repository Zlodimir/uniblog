<% title("Новости") %>
<div class='page-header'>
  <h3 class="text-center">Новости</h3>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Дата</th>
      <th>Название</th>
      <th>Автор</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do | item | %>
      <tr>
        <td><%= localize(item.created_at, :format => :only_date) %></td>
        <td><%= link_to item.title, item_path(item) %></td>
        <td>
          <%= item.author.firstname + ' ' + item.author.lastname + ' ' + item.author.email %>
        </td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='text-center'><%= paginate @items %></div>

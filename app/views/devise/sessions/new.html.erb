<% title('Вход') %>
<div class="page-header">
  <h2>Вход</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: 'E-mail', placeholder: 'Введите адрес электронной почты' %>
    <%= f.input :password, required: false, label: 'Пароль', placeholder: 'Введите пароль' %>
    <%= f.input :remember_me, label: 'Запомнить меня', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Вход', class: 'btn btn-primary btn-md' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
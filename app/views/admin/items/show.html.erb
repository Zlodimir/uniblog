<% title(@item.title, 'Новости') %>
<div class="page-header">
	<h3><%= @item.title %></h3>

	<ul class="actions">
		<% admin_only do %>
			<li><%= link_to 'Редактировать', edit_admin_item_path(@item), class: 'edit' %></li>
			<li>
				<%= link_to 'Удалить',
				admin_item_path(@item),
				method: :delete,
				data: {confirm: 'Вы действительно хотите удалить новость?'},
				class: 'delete'
				%>
			</li>
		<% end %>
	</ul>
</div>
<p><%= @item.description.html_safe %></p>
<p id='author'>Создано: <%= @item.author %>, <%= time_ago_in_words(@item.created_at) %> назад</p>
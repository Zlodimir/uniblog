<% title('Страницы') %>
<div class='page-header'>
  <h3>Страницы</h3>
  <ul class="actions">
    <li><%= link_to 'Создать', new_admin_page_path, class: 'new' %></li>
  </ul>
</div>

<p>Список всех созданных страниц:</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th>Автор</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.id %></td>
        <td><%= link_to page.name, admin_page_path(page) %></td>
        <td>
          <%= render 'admin/shared/author_info', author: page.author %>
        </td>
        <td style="width: 1px;">
          <%= link_to edit_admin_page_path(page), class: 'btn btn-default btn-xs' do %>
              <i class="fa fa-pencil fa-lg"></i>
          <% end %>
        </td>
        <td style="width: 1px;">
          <%= link_to admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' do %>
              <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='text-center'><%= paginate @pages %></div>
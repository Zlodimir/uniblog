<% title('Страницы') %>
<div class='page-header'>
  <h3>Страницы</h3>
  <ul class="actions">
    <li><%= link_to 'Создать', new_admin_page_path, class: 'new' %></li>
  </ul>
</div>

<p>Список всех созданных страниц:</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Название</th>
      <th>Автор</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do | page | %>
      <tr>
        <td><%= page.id %></td>
        <td><%= link_to page.name, admin_page_path(page) %></td>
        <td>
          <%= render 'admin/shared/author_info', locals: {author: page.author} %>
        </td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='text-center'><%= paginate @pages %></div>
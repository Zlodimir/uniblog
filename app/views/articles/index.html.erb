<p id="notice"><%= notice %></p>

<h1>Список публикаций</h1>

<table class="table table-hover">
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td style="width: 100%;"><%= link_to article.title, article %></td>
        <td>
          <%= link_to edit_article_path(article), class: "btn btn-default btn-xs" do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
        </td>
        <td>
          <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% admin_only do %>
    <%= link_to 'Создать новую статью', new_article_path %>
<% end %>

<% title('Статьи') %>

<div class='page-header'>
  <h3 class="text-center">Новости</h3>
</div>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Дата</th>
    <th>Название</th>
    <th>Автор</th>
  </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= localize(article.created_at, :format => :only_date) %></td>
        <td><%= link_to article.title, article %></td>
        <td>
          <%= article.author.to_s %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

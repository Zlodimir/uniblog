<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Текст:</strong>
  <%= @article.text %>
</p>

<% if @attachments.any? %>
  <p>
    <strong>Прикрепленные файлы:</strong>
    <% @attachments.each do |attach| %>
      <%= attach.name %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Редактировать', edit_article_path(@article) %> |
<%= link_to 'Список публикаций', articles_path %>
